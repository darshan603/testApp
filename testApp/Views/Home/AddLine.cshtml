@model testApp.Models.SalesLines
@{
    ViewData["Title"] = "AddLine";
}

<div class="container">
    <div class="card">
        <div class="card-header bg-gradient-lightblue">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            

            <h3 class="card-title" style="font-weight:bold">Sales</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group row">
                    <input type="hidden" asp-for="SSalesID">
                    <div class="col-4">
                        <label>Product Name</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label>Qty</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Quantity" value="1" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label>UnitPrice</label>
                    </div>
                    <div class="col-8">
                        <input type="number" min="1" asp-for="UnitPrice" class="form-control" />
                        <span asp-validation-for="UnitPrice" class="text-danger"></span>
                    </div>
                </div>

               

                <div class="form-group row">
                    <div class="col-8 offset-4">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control">Add</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<div class="container">
    <div class="card">
        <div class="card-header bg-gradient-lightblue">
            <h3 class="card-title" style="font-weight:bold">List</h3>
        </div>
        
        <div class="card-body">
            <table id="tblData" class="table table-bordered table-hover" style="width:100%">
                <thead>
                    <tr class="table-info">
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>UnitPrice</th>
                        <th>Total</th>
              
                        <th style="text-align:center">Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <script src="~/js/Custom/saleList.js"></script>
}

