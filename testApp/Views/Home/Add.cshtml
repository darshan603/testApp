@model testApp.Models.Sales
@{
    ViewData["Title"] = "Add";
}

<div class="container">
    <div class="card">
        <div class="card-header bg-gradient-lightblue">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <h3 class="card-title" style="font-weight:bold">Sales </h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group row">
                    <div class="col-4">
                        <label>Customer Name </label>
                    </div>
                    <div class="col-12">
                        <input asp-for="CustomerName" class="form-control" />
                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label>Address </label>
                    </div>
                    <div class="col-12">
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label>Tel.No </label>
                    </div>
                    <div class="col-12">
                        <input asp-for="Tel" class="form-control" />
                        <span asp-validation-for="Tel" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label>Invoice No </label>
                    </div>
                    <div class="col-12">
                        <input asp-for="InvNo" class="form-control" />
                        <span asp-validation-for="InvNo" class="text-danger"></span>
                    </div>

                    <div class="col-4">
                        <label>Sale Type </label>
                    </div>
                    <div class="col-12">
                       
                        <select asp-for="SalesType">
                            <option value="Cash">Cash</option>
                            <option value="Credit"> Credit</option>

                        </select>
                        <span asp-validation-for="InvNo" class="text-danger"></span>
                    </div>

                    <div class="col-4">
                        <label>Sales Date </label>
                    </div>
                    <div class="col-12">
                        <input type="date" asp-for="SalesDate" class="form-control" />
                        <span asp-validation-for="SalesDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4">
                      ﻿<div class="row">
                            <div class="col">
                                <button type="submit"  class="btn btn-primary form-control">Add</button>
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

